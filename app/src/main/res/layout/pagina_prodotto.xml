<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/img"
        android:layout_marginTop="15dp"
        />
       <TextView
            android:id="@+id/titolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="15dp"
           android:layout_below="@id/img"
           android:textColor="@color/black"
           android:textStyle="bold"
           android:layout_marginStart="15dp"
           android:textSize="@dimen/slide_title"
           />
        <TextView
            android:id="@+id/desc"
            android:layout_marginTop="15dp"
            android:layout_below="@id/titolo"
            android:layout_width="wrap_content"
            android:textSize="@dimen/slidedesc"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/prezzo"
            android:layout_width="wrap_content"
            android:textSize="@dimen/slidedesc"
            android:text="@string/cash"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/desc"
            android:layout_marginTop="15dp"
            />


    <com.shawnlin.numberpicker.NumberPicker
        android:layout_below="@id/prezzo"
        android:id="@+id/number_picker"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:np_dividerColor="@color/mimosa"
        app:np_formatter="%02d"
        app:np_height="80dp"
        app:np_width="190dp"
        app:np_max="59"
        app:np_min="0"
        app:np_selectedTextColor="@color/black"
        app:np_selectedTextSize="20dp"
        app:np_textColor="@color/black"
        app:np_textSize="15sp"
        android:layout_marginStart="15dp"
        app:np_typeface="san-serif-light"
        app:np_value="3"
        app:np_orientation="horizontal"
        />
    <Button
        android:id="@+id/cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:text="@string/add_cart"
        android:textColor="@color/black"
        android:background="@drawable/gradient_orange" />


</RelativeLayout>