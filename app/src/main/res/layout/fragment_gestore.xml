<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6800BCD4"
    tools:context=".fragments.Gestore">

    <ImageView
        android:id="@+id/img_gestore"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/gestore"
        />
    <TextView
        android:id="@+id/gestore_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_gestore"
        android:textSize="@dimen/slide_title"
        android:gravity="center"
        android:text="@string/gestore_title" />
    <TextView
        android:id="@+id/gestore_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gestore_title"
        android:textSize="@dimen/slidedesc"
        android:gravity="center"
        android:text="@string/gestore_desc" />

</RelativeLayout>