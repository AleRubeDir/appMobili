<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/chat_rider_gestore"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mail_gestore"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/name_gestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/surname_gestore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cognome"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/name_gestore"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/anteprima_gestore"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_gestore"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Ultimo messaggio chat"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ora_gestore"
            android:text="10:13"
            android:layout_below="@id/data_gestore"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/data_gestore"
            android:text="10 Ago 2021"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/chat_notifica"
            android:id="@+id/notifiche_gestore"

            android:layout_below="@id/ora_gestore"
            android:layout_alignParentEnd="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="10dp"
            android:layout_below="@id/notifiche_gestore"
            android:background="@color/menu"/>
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/chat_rider_cliente"
        android:layout_below="@id/chat_rider_gestore"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mail"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cognome"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/anteprima"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Ultimo messaggio chat"
            android:textSize="15sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ora"
            android:text="10:13"
            android:layout_below="@id/data"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/data"
            android:text="10 Ago 2021"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/white"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:padding="5dp"
            android:background="@drawable/chat_notifica"
            android:id="@+id/notifiche"

            android:layout_below="@id/ora"
            android:layout_alignParentEnd="true"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5px"
            android:layout_marginTop="10dp"
            android:layout_below="@id/notifiche"
            android:background="@color/menu"/>
    </RelativeLayout>
</RelativeLayout>