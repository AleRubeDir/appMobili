<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tipo"
        android:padding="10dp"
        android:src="@drawable/rider"/>
    <TextView
        android:layout_toEndOf="@id/tipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/contatto"
        android:textColor="@color/black"
        android:textSize="30sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/menu"
        android:layout_below="@id/contatto"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@id/contatto"
        android:focusable="true"
        android:clickable="true"
        android:id="@+id/messages"
        android:name="it.uniupo.progetto.fragments.ChatGestoreFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_above="@+id/write_message"
        tools:context=".ChatActivity" />

    <EditText
        android:layout_marginStart="16dp"
        android:id="@+id/write_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/send"
        android:background="@android:color/transparent"
        android:hint="Enter Message"
        android:inputType="text"
        android:maxLines="6"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        />

    <Button
        android:id="@+id/send"
        android:layout_width="64dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:background="@color/mimosa"
        android:text="Send"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
     />
</RelativeLayout>